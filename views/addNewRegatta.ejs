<!DOCTYPE html>
<html>
  <head>
    <title>Add Regatta</title>
    <% include ./partials/head.ejs %>
  </head>
  <body>
    <div class="container">
      <% include ./partials/header.ejs %>
      <div class="row">
	<div class="col-md-2">
	  <ul class="nav">
	    <li><a class="btn" href="/">Back to results</a></li>
	  </ul>
	</div>
	
	<div class="col-md-10 well">
	  <form action="addEvent" method="post">

	    <div class="row">
	      <div class="col-md-12">

		<h2>New Event</h2>
	      </div>
		<div class="form-group col-md-12">
		  <label for="name">Regatta Name</label>
		  <input type="text" name="name" placeholder="My Regatta" class="form-control" required />
		</div>
		<div class="form-group col-md-6">
		  <label for="host">Host Club</label>
		  <p><%= host.name %></p>
		</div>
		<div class="form-group col-md-3">
		  <label for="city">City</label>
		  <p><%= host.location.city %></p>
		</div>
		<div class="form-group col-md-3">
		  <label for="state">State</label>
		  <p><%= host.location.state %></p>
		</div>
		<div class="form-group col-md-6">
		  <label for="date">Start Date</label>
		  <input type="date" name="date" class="form-control" placeholder="2017-08-30" equired />
		  <span class="help-block">YYYY-MM-DD</span>
		</div>

		<div class="form-group col-md-6">
		  <label for="class_list">Classes</label>
		  <input type="text" name="class_list" placeholder="Laser, Club 420" class="form-control" />
		  <span class="help-block">Seperate multiple classes by commas</span>
		</div>

		<div class="form-group col-md-9">
		  <label for="description">Event Descrition</label>
		  <textarea rows=5 class="form-control" name="event_description" placeholder="Describe your regatta!"></textarea>
		</div>

		<div class="form-group col-md-9">
		  <label for="registration_site">Registration Site</label>
		  <input type="url" name="registration_site" placeholder="http://example.com" class="form-control" />
<span class="help-block">RegattaHub can handle registration for you. <a href="">Learn more.</a></span>
		</div>

		  <input name="gotcha" type="text" style="display:none" />
		</div>
	    <!-- only robots fill this out -->
		<div class="form-group col-md-12">
		  <input class="btn btn-success btn-lg" type="submit" value="Submit"/>
		</div>
	      </div>
	    </div>
	  </form>
	  
      </div>
      <% include ./partials/foot.ejs %>
    </div>
  </body>
</html>
