    <div class="container">
      <% include ./partials/header.ejs %>
      <div class="row">
	<div class="col-md-2">
	  <p><a class="btn btn-primary" href="/">Back to home</a></p>
	</div>
	<div class="col-md-8" ng-app="manageApp">
	  <h1><%= club.name %></h1>
