	    <thead>
	      <tr>
		<th>Date</th>
		<th>Name</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% for (var i=0;i<regattas.length;i++){ %>
	      <tr>
		<td>
		  <%= regattas[i].event_date.toDateString() %>
		</td>
		<td><strong><a href=""><%= regattas[i].event_name %></a></strong></td>
		<td><a href="" class="btn btn-default">Edit</a></td>
	      </tr>
	      <% } %>
	      <!-- a list of this clubs events -->
	    </tbody>
	  </table>

	    
